				<button label="center" onClick="win.position = &quot;center&quot;;"/>
			</toolbar>
		</south>
	</borderlayout>
</window>
<button label="Overlap" onClick="win.setSizable(true);win.doOverlapped();"/>
<button label="Popup" onClick="win.setSizable(true);win.doPopup();"/>
